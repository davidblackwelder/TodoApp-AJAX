<div class="well">
	<div class="row">
		<div class="col-md-8">
			<table class="table table-striped">
				<tr>
					<td>Description:</td>
					<td><%= link_to task.description, task_path(task.id), remote: true, method: :delete, data: { confirm: "Are you sure?"} %></td>
				</tr>
				<tr>
					<td>Deadline:</td>
					<td><%= task.deadline %></td>
				</tr>
			</table>
		</div>

			<div class="col-md-4">
				<%= link_to "Edit", edit_task_path(task.id), remote: true, class: "btn btn-warning" %>
				<%= link_to "Delete", task_path(task.id), remote: true, method: :delete, data: { confirm: "Are you sure?"}, class: "btn btn-danger" %>
			</div>
	</div>
</div>
